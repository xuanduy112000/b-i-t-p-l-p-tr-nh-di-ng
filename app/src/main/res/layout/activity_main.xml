<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#5A4E50"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E1E4F7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/manhinh"
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="200px"
            android:gravity="right"
            android:paddingRight="20px"
            android:background="@drawable/conner">
        </TextView>
        <ImageButton
            android:layout_marginRight="20px"
            android:layout_marginTop="30px"
            android:layout_width="500px"
            android:layout_height="140px"
            android:background="@color/black"
            android:layout_gravity="right"></ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="5px"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                android:text="OFF"
                app:backgroundTint="#998E92"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                android:text="MRC"
                app:backgroundTint="#998E92"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="M-"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="M+"></Button>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="#5A4E50"></ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5px"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="%"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="√"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="MC"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="MR"></Button>

            <Button
                android:id="@+id/chia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="÷"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5px"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="±"></Button>

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#FFFFFF"
                android:text="7"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                android:text="8"></Button>

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#FFFFFF"
                android:text="9"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/nhan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="×"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5px"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="♪"></Button>

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#FFFFFF"
                android:text="4"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#FFFFFF"
                android:text="5"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#FFFFFF"
                android:text="6"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/tru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="1"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="-"></Button>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginBottom="5px"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/CE"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/conner_btn"
                        app:backgroundTint="#FF9800"
                        android:text="CE"
                        android:textColor="@color/black"></Button>

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5px"
                        android:layout_weight="1"
                        android:background="@drawable/conner_btn"
                        app:backgroundTint="#FFFFFF"
                        android:text="1"
                        android:textColor="@color/black"></Button>

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5px"
                        android:layout_weight="1"
                        android:background="@drawable/conner_btn"
                        app:backgroundTint="#FFFFFF"
                        android:text="2"
                        android:textColor="@color/black"></Button>

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5px"
                        android:layout_weight="1"
                        android:background="@drawable/conner_btn"
                        app:backgroundTint="#FFFFFF"
                        android:text="3"
                        android:textColor="@color/black"></Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/ON"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/conner_btn"
                        app:backgroundTint="#FF9800"
                        android:text="ON/C"
                        android:textColor="@color/black"></Button>

                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5px"
                        android:layout_weight="1"
                        android:background="@drawable/conner_btn"
                        app:backgroundTint="#FFFFFF"
                        android:text="0"
                        android:textColor="@color/black"></Button>

                    <Button
                        android:id="@+id/phay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5px"
                        android:layout_weight="1"
                        android:background="@drawable/conner_btn"
                        app:backgroundTint="#FFFFFF"
                        android:text="."
                        android:textColor="@color/black"></Button>

                    <Button
                        android:id="@+id/bang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5px"
                        android:layout_weight="1"
                        android:background="@drawable/conner_btn"
                        app:backgroundTint="#FFFFFF"
                        android:text="="
                        android:textColor="@color/black"></Button>
                </LinearLayout>
        </LinearLayout>

            <Button
                android:id="@+id/cong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5px"
                android:layout_weight="4"
                android:background="@drawable/conner_btn"
                app:backgroundTint="#998E92"
                android:text="+"></Button>
    </LinearLayout>
</LinearLayout>
</LinearLayout>